	// Le raccourci pour diminuer le niveau d'un titre est : ⌘ ⇧ ,
	
    { "keys": ["super+shift+;"], "command": "change_heading_level", "args": {"up": true}, "context": [{"key": "selector", "operator": "equal", "operand": "text.html.markdown"}] },
